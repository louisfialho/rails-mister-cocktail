

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @cocktail.photo.key %>')">
  <div class="container">
    <h1><%= @cocktail.name %></h1>
    <p>
      <% @cocktail.doses.each do |dose| %>
        <li class="white"> <%= dose.description %> (Ingredient: <%=  dose.ingredient.name %>) <%= link_to dose_path(dose), method: :delete do %> <i class="fas fa-trash-alt"></i> <% end %> </li>
      <% end %>
    </p>
  </div>
</div>

<br>



<div class="form">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">
      <h2> Add a dose </h2>
      <%= simple_form_for [ @cocktail, @dose ] do |f| %>
        <%= f.input :description %>
        <%= f.association :ingredient, include_blank: false %>
        <%= f.submit "Submit", class: "btn btn-primary" %>
      <% end %>
      <br>
      <%= link_to("See all cocktails", cocktails_path) %>
   </div>
  </div>
 </div>
